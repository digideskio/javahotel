<?xml version="1.0"?>
<ui:UiBinder xmlns:ui='http://www.jythongwt.uibinderxsd.com'
	xmlns:g='http://www.jythongwt.uibinderxsd.com' xmlns:p='http://www.jythongwt.uibinderxsd.com'
	xmlns:i='http://www.jythongwt.uibinderxsd.com' xmlns='http://www.jythongwt.uihtml.com'>

  <style>
        @external .menu-sample, .horizontal-section;

        .menu-sample .horizontal-section {
            padding: 0 !important;
        }
    </style>

    <g:HTMLPanel addStyleNames="menu-sample">
        <div class="horizontal-section-container center-justified layout">
            <div>
                <h4>Standard</h4>
                <div class="horizontal-section">
                    <p:PaperMenu addStyleNames="list">
                        <paper-item>Inbox</paper-item>
                        <paper-item>Starred</paper-item>
                        <paper-item>Sent mail</paper-item>
                        <paper-item>Drafts</paper-item>
                    </p:PaperMenu>
                </div>
            </div>

            <div>
                <h4>Pre-selected</h4>
                <div class="horizontal-section">
                    <p:PaperMenu addStyleNames="list" selected="0">
                        <paper-item>Inbox</paper-item>
                        <paper-item disabled="true">Starred</paper-item>
                        <paper-item>Sent mail</paper-item>
                        <paper-item>Drafts</paper-item>
                    </p:PaperMenu>
                </div>
            </div>

            <div>
                <h4>Multi-select</h4>
                <div class="horizontal-section">
                    <p:PaperMenu addStyleNames="list" multi="true">
                        <paper-item>Bold</paper-item>
                        <paper-item>Italic</paper-item>
                        <paper-item>Underline</paper-item>
                        <paper-item>Strikethrough</paper-item>
                    </p:PaperMenu>
                </div>
            </div>
        </div>
    </g:HTMLPanel>
        
</ui:UiBinder>