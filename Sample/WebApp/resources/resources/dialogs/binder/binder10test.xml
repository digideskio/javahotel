                height: 216px;
            }

            .item-sample h4 {
                margin-left: 24px;
            }

            .item-sample .avatar {
                display: inline-block;
                width: 40px;
                height: 40px;
                border-radius: 50%;
                overflow: hidden;
                background: #ccc;
            }

            .item-sample .blue {
                background-color: var(--paper-light-blue-300);
            }
            .item-sample .red {
                background-color: var(--paper-red-300);
            }
            .item-sample .orange {
